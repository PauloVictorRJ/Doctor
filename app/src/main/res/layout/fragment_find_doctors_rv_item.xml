<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white"
    tools:context=".view.finddoctors.FindDoctorsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/find_doctor_item_poster"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/find_doctor_poster"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/find_doctor_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/find_doctor_item_name_txt"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/find_doctor_item_poster"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/find_doctor_item_specialization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:text="@string/find_doctor_item_specialization_txt"
            android:textColor="@color/green"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@id/find_doctor_item_poster"
            app:layout_constraintTop_toBottomOf="@id/find_doctor_item_name" />

        <TextView
            android:id="@+id/find_doctor_item_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:text="@string/find_doctor_item_experience_txt"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@id/find_doctor_item_poster"
            app:layout_constraintTop_toBottomOf="@id/find_doctor_item_specialization" />

        <ImageView
            android:id="@+id/find_doctor_item_classification_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_order"
            app:layout_constraintStart_toStartOf="@id/find_doctor_item_specialization"
            app:layout_constraintTop_toBottomOf="@id/find_doctor_item_experience" />

        <TextView
            android:id="@+id/find_doctor_item_classification_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:text="@string/find_doctor_item_classification_txt"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/find_doctor_item_classification_icon"
            app:layout_constraintStart_toEndOf="@id/find_doctor_item_classification_icon"
            app:layout_constraintTop_toTopOf="@id/find_doctor_item_classification_icon" />

        <ImageView
            android:id="@+id/find_doctor_item_views_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_views"
            app:layout_constraintStart_toStartOf="@id/find_doctor_item_specialization"
            app:layout_constraintTop_toBottomOf="@id/find_doctor_item_experience" />

        <TextView
            android:id="@+id/find_doctor_item_views_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:text="@string/find_doctor_item_classification_txt"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/find_doctor_item_views_icon"
            app:layout_constraintStart_toEndOf="@id/find_doctor_item_views_icon"
            app:layout_constraintTop_toTopOf="@id/find_doctor_item_views_icon" />

        <ImageView
            android:id="@+id/find_doctor_item_patient_stories_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_patient_stories"
            app:layout_constraintStart_toStartOf="@id/find_doctor_item_specialization"
            app:layout_constraintTop_toBottomOf="@id/find_doctor_item_experience" />

        <TextView
            android:id="@+id/find_doctor_item_patient_stories_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:text="@string/find_doctor_item_classification_txt"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/find_doctor_item_patient_stories_icon"
            app:layout_constraintStart_toEndOf="@id/find_doctor_item_patient_stories_icon"
            app:layout_constraintTop_toTopOf="@id/find_doctor_item_patient_stories_icon" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/find_doctor_item_booking_btn"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_background_retangle_green"
            android:text="@string/find_doctor_item_book_now_btn_txt"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>